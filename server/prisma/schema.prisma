// server/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Comment {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(120)
  relationship String?  @db.VarChar(80)
  message      String   @db.VarChar(500)   // cap at 500 like the form
  createdAt    DateTime @default(now())

  @@index([createdAt])
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(200)
  author      String?  @db.VarChar(150)
  imagePath   String   @db.VarChar(300)  // e.g., "/books/How to Win Friends.jpg"
  review      String?  @db.VarChar(500)  // optional brief review
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
  @@index([createdAt])
}
model BookArchive {
  id            Int      @id @default(autoincrement())
  title         String   @db.VarChar(200)
  author        String?  @db.VarChar(150)
  imagePath     String   @db.VarChar(300)  // First cover image used
  firstAddedAt  DateTime @default(now())
  lastSeenAt    DateTime @updatedAt
  timesAdded    Int      @default(1)       // Track how many times added
  isDeleted     Boolean  @default(false)   // Track if currently deleted from main shelf

  @@unique([title, author])  // Prevent duplicates based on title + author
  @@index([title])
  @@index([firstAddedAt])
}
